    @* FEEDBACK MODAL
        -------------------------------------------------------------------------------------------------------------------------------- *@
    <div id="modalFeedback" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="modalTroublesLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h4 class="modal-title" id="modalTroublesLabel">Обратная связь</h4>
                    </div>
                    <form class="form-horizontal" role="form" name="feedbackForm" method="post" action="@Url.Action("SendFeedback", "Home")">
                        <div class="modal-body">
                            <p>
                                Ваше сообщение будет отправлено в службу поддержки.
                                Мы постараемся связаться с вами как можно быстрее.
                            </p>
                            <p>
                                Если у вас возникли проблемы с заказом, не забудьте указать в сообщении номер вашего заказа.
                            </p>
                            <div class="form-group">
                                <label for="selTheme" class="col-md-4 control-label">Причина вашего обращения:</label>
                                <div class="col-md-8">
                                    <select name="Theme" class="form-control">
                                        <option value="TechicalQuestion">Технический вопрос</option>
                                        <option value="OrderIssue">Проблемы с заказом</option>
                                        <option value="Parthnership">Партнерское предложение</option>
                                        <option value="Complain">Жалоба</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="txtName" class="col-md-4 control-label">Как вас зовут:</label>
                                <div class="col-md-8">
                                    <input type="text" id="Name" name="Name" required class="form-control" placeholder="Имя и Фамилия" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="txtEmail" class="col-md-4 control-label">Эл. Почта для ответа:</label>
                                <div class="col-md-8">
                                    <input type="text" id="Email" name="Email" required class="form-control" placeholder="Email" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="txtMessage" class="col-md-4 control-label">Сообщение:</label>
                                <div class="col-md-8">
                                    <textarea id="Message" name="Message" rows="5" required class="form-control" placeholder="Текст вашего сообщения"></textarea>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <input type="submit" ng-disabled="feedbackForm.$invalid" class="btn btn-success" value="Отправить сообщение" />
                        </div>
                    </form>
            </div>
        </div>
    </div>

