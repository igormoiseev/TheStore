@model TheStore.Web.Models.Option.NewOptionForm
@{
    ViewBag.Title = "Новая опция";
}

<h2>Новая опция</h2>
<hr />
@using (Html.BeginForm("New", "Option", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    <div class="form-group">
        @Html.LabelFor(x => x.Name, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.EditorFor(x => x.Name)
            @Html.ValidationMessageFor(x => x.Name)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Url, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.EditorFor(x => x.Url)
            @Html.ValidationMessageFor(x => x.Url)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.CharacteristicId, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.EditorFor(x => x.CharacteristicId)
            @Html.ValidationMessageFor(x => x.CharacteristicId)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Description, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.EditorFor(x => x.Description)
            @Html.ValidationMessageFor(x => x.Description)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Добавить опцию" class="btn btn-primary" />
        </div>
    </div>
}

