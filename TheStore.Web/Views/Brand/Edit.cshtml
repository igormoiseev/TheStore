@model TheStore.Web.Models.Brand.EditBrandForm
@{
    ViewBag.Title = string.Format("Редактирование производителя \"{0}\"", Model.Name);
}

<h2>Редактирование производителя &laquo;@Model.Name&raquo;</h2>
<hr />

@using (Html.BeginForm("Edit", "Brand", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    @Html.HiddenFor(x => x.BrandId)
    <div class="form-group">
        @Html.LabelFor(x => x.Name, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.EditorFor(x => x.Name)
            @Html.ValidationMessageFor(x => x.Name)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.BrandUrl, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.EditorFor(x => x.BrandUrl)
            @Html.ValidationMessageFor(x => x.BrandUrl)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Description, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.EditorFor(x => x.Description)
            @Html.ValidationMessageFor(x => x.Description)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Сохранить производителя" class="btn btn-primary" />
        </div>
    </div>
}
