        @Html.LabelFor(x => x.CategoryId, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.EditorFor(x => x.CategoryId)
            @Html.ValidationMessageFor(x => x.Url)
        </div>
    </div>
    <div class="form-group">
