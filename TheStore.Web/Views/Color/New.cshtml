@model TheStore.Web.Models.Color.NewColorForm
@{
    ViewBag.Title = "Новый цвет";
}

<div class="container">
    <h2>Новый цвет</h2>
    <hr />
    @using (Html.BeginForm("New", "Color", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary()
        <div class="form-group">
            @Html.LabelFor(x => x.Name, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.EditorFor(x => x.Name)
                @Html.ValidationMessageFor(x => x.Name)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Добавить цвет" class="btn btn-primary" />
            </div>
        </div>
    }
</div>