@model TheStore.Web.Models.ProductFilter.ProductFilterWidgetViewModel

@if (Model.Category.Categories.Any())
{
    <h4>Категории</h4>
    <ul class="list-unstyled">
        @foreach (var subCategory in Model.Category.Categories.OrderBy(x => x.Name))
        {
            <li>
                @Html.ActionLink(subCategory.Name, "Index", "Category", new {categoryUrl = subCategory.CategoryUrl}, null)
            </li>
        }
    </ul>
}

@if (Model.Brands.Any())
{
    <h4>Производители</h4>
    <ul class="list-unstyled">
        @foreach (var brand in Model.Brands)
        {
            <li>
                @Html.ActionLink(brand.Name, "Index", "Brand", new { categoryUrl = Model.Category.CategoryUrl, brandUrl = brand.BrandUrl }, null)
            </li>
        }
    </ul>
}