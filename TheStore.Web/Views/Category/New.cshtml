@model TheStore.Web.Models.Category.NewCategoryForm
@{
    ViewBag.Title = "Новая категория";
}

<h2>Новая категория</h2>
<hr/>
@using (Html.BeginForm("New", "Category", FormMethod.Post, new {@class = "form-horizontal"}))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    <div class="form-group">
        @Html.LabelFor(x => x.Name, new {@class = "col-md-2 control-label"})
        <div class="col-md-10">
            @Html.EditorFor(x => x.Name)
            @Html.ValidationMessageFor(x => x.Name)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.CategoryUrl, new {@class = "col-md-2 control-label"})
        <div class="col-md-10">
            @Html.EditorFor(x => x.CategoryUrl)
            @Html.ValidationMessageFor(x => x.CategoryUrl)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.ParentCategoryId, new {@class = "col-md-2 control-label"})
        <div class="col-md-10">
            @Html.EditorFor(x => x.ParentCategoryId)
            @Html.ValidationMessageFor(x => x.ParentCategoryId)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.SequenceNumber, new {@class = "col-md-2 control-label"})
        <div class="col-md-10">
            @Html.EditorFor(x => x.SequenceNumber)
            @Html.ValidationMessageFor(x => x.SequenceNumber)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Description, new {@class = "col-md-2 control-label"})
        <div class="col-md-10">
            @Html.EditorFor(x => x.Description)
            @Html.ValidationMessageFor(x => x.Description)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Добавить категорию" class="btn btn-primary"/>
        </div>
    </div>
}
